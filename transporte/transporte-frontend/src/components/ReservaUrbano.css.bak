/* src/pages/ReservaUrbano.css */

.reserva-container {
  padding: 10px 15px;
  font-family: Arial, sans-serif;
}

/* Título grande estilo Yango */
.titulo-yango {
  font-size: 26px;
  font-weight: 900;
  margin-bottom: 15px;
  color: #222;
}

/* CAIXAS */
.campo-yango {
  margin-bottom: 14px;
}

.label-yango {
  display: block;
  font-size: 15px;
  font-weight: bold;
  margin-bottom: 4px;
  color: #444;
}

.input-yango {
  width: 100%;
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 10px;
  font-size: 16px;
  outline: none;
}

.valor-yango {
  padding: 12px;
  background: #f2f2f2;
  border-radius: 10px;
  font-size: 17px;
}

.total-yango {
  font-size: 18px;
  font-weight: bold;
  margin-top: 8px;
}

/* BOTÃO PRINCIPAL */
.btn-yango {
  width: 100%;
  padding: 14px;
  border: none;
  background: #00A2E8;
  color: black;
  border-radius: 12px;
  font-size: 18px;
  font-weight: bold;
  margin-top: 20px;
}

/* MODAL */
.modal-bg {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.80);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-yango {
  background: white;
  padding: 90px;
  width: 90%;
  max-width: 380px;
  border-radius: 18px;
  text-align: center;
}

.info-pagamento {
  margin: 12px 0;
  color: #555;
}

.btn-cancelar {
  margin-top: 10px;
  width: 100%;
  padding: 13px;
  background: #ddd;
  border-radius: 10px;
  border: none;
  font-size: 16px;
}
